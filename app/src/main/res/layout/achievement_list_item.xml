<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/achievement_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/tv_achivement_name"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/achievement_image"
            android:layout_alignStart="@+id/achievement_image"
            android:layout_alignEnd="@+id/achievement_image"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="14dp"
            android:text="The Photographer"
            android:textSize="14sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

</LinearLayout>