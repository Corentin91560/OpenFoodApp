<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <TextView
        android:id="@+id/tv_spacer_main"
        android:layout_width="7dp"
        android:layout_height="65dp"
        android:layout_marginBottom="12dp"
        android:elevation="3dp"
        android:gravity="center"
        android:text="|"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@id/guidelinebuttonconfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_sign_in_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:text="Sign In"
        app:backgroundTint="#fa8678"
        app:layout_constraintBottom_toTopOf="@id/guidelinebuttonconfirm"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5"
        />

    <Button
        android:id="@+id/button_sign_up_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:text="Sign Up"
        app:backgroundTint="#fa8678"
        app:layout_constraintBottom_toTopOf="@id/guidelinebuttonconfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent="0.5"
        />

    <ImageView
        android:layout_width="385dp"
        android:layout_height="128dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_spacer_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_large"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebuttonconfirm"
        app:layout_constraintGuide_percent="0.97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>