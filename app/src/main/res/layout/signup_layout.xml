<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <ProgressBar
        android:id="@+id/progress_bar_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="1dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinepicture"
        app:layout_constraintGuide_percent="0.03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <ImageView
        android:id="@+id/imageview_sign_up"
        android:layout_width="108dp"
        android:layout_height="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelinepicture"
        app:srcCompat="@drawable/logo_small_icon_only_inverted"
        />

    <Button
        android:id="@+id/upload_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:backgroundTint="@color/button"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_sign_up"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetvname"
        app:layout_constraintGuide_percent="0.30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_name_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Name  "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinetvname"
        />

    <EditText
        android:id="@+id/et_name_sign_up"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Your name"
        android:gravity="center"
        android:textColorHint="@color/hint"
        android:textColor="@color/black"
        android:layout_marginVertical="6dp"
        android:background="@drawable/rounded_corner_without_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_sign_up"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetvemail"
        app:layout_constraintGuide_percent="0.45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/tv_email_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Email  "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinetvemail"
        />

    <EditText
        android:id="@+id/et_email_sign_up"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="ex: example@example.com"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:textColorHint="@color/hint"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner_without_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_sign_up"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetvpassword"
        app:layout_constraintGuide_percent="0.60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/tv_password_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Password  "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinetvpassword"
        />

    <EditText
        android:id="@+id/et_password_sign_up"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/hint"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner_without_border"
        android:layout_marginVertical="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_sign_up"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebuttonconfirm"
        app:layout_constraintGuide_percent="0.97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <Button
        android:id="@+id/confirm_button_sign_up"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:text="Confirm"
        app:backgroundTint="@color/button"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/guidelinebuttonconfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>